<div class="blogSection">
  <h2>
    <%= toggle_button("comment_#{comment.id}", "hide", "show")%>
    Comment
    <%- if logged_in? %>
      <div class='postControls'>
        <%= link_to image_tag( '/images/icons/report_delete.png'),comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete %>
      </div>
    <%-end%>
  </h2>
  <div id='comment_<%= comment.id %>'>
    <p>By <strong><%= comment.author %></strong> on <%= comment.created_at %>: </p><br />    
    <p class='comment_body'>
      <%=h comment.body %>
    </p><br />
    <br />
  </div>
</div>