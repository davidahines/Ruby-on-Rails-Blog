<%-
#/app/views/posts/_comments.html.erb
# Displays the form for adding a comment
-%>

<% unless @post.comments.blank? %>
  
  <% @post.comments.each do |comment| %>
  <div class="blogSection">
  <h2>Comment
    <%- if logged_in? %>
      <%= link_to image_tag( '/images/icons/report_delete.png'),comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete %>
    <%-end%>
  </h2>
    <p>By <strong><%= comment.author %></strong> on <%= comment.created_at %>: </p>

    <br />
    <p class='comment_body'><%=h comment.body %></p><br />
    <br />
    </div>
  <% end %>
<% end %>

<%= render :partial => 'comments_form' %>
